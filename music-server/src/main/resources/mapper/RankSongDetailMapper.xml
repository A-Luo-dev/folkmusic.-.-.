<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.yin.mapper.RankSongDetailMapper">

    <!-- 字段映射 -->
    <resultMap id="BaseResultMap" type="com.example.yin.model.domain.RankSongDetail">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="rank_song_id" property="rankSongId" jdbcType="BIGINT"/>
        <result column="song_id" property="songId" jdbcType="BIGINT"/>
        <result column="sequence" property="sequence" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 公共字段列表 -->
    <sql id="Base_Column_List">
        id, rank_song_id, song_id, sequence
    </sql>

    <!-- 查询指定排行榜下的歌曲 -->
    <select id="getSongsByRankId" parameterType="long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM rank_song_detail
        WHERE rank_song_id = #{rankSongId}
        ORDER BY sequence ASC
    </select>

    <!-- 插入一条排行榜歌曲 -->
    <insert id="insertRankSongDetail" parameterType="com.example.yin.model.domain.RankSongDetail">
        INSERT INTO rank_song_detail (rank_song_id, song_id, sequence)
        VALUES (#{rankSongId}, #{songId}, #{sequence})
    </insert>

</mapper>
